<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/colorFondo">

            <TextView
                android:id="@+id/titulo_cuentas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar Tarjeta de Crédito"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/et_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la tarjeta" />

        <EditText
            android:id="@+id/et_linea_credito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Línea de crédito"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/et_saldo_consumido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Saldo Consumido"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/et_saldo_disponible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Saldo Disponible"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/et_prox_pago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Proximo Pago"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/et_pago_minimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pago Minimo"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/et_fecha_facturacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Facturacion"
            android:focusable="false" />

        <Button
            android:id="@+id/btn_fecha_facturacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/botonSecundario"
            android:text="Seleccionar fecha de Facturacion" />

        <EditText
            android:id="@+id/et_fecha_vencimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Vencimiento"
            android:focusable="false" />

        <Button
            android:id="@+id/btn_seleccionar_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/botonSecundario"
            android:text="Seleccionar fecha de Vencimiento" />

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/botonSecundario"
            android:text="Registrar" />



    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="8dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/btn_ver_cuentas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_cuentas"
            android:background="@android:color/transparent"
            android:contentDescription="Ver Cuentas" />

        <ImageButton
            android:id="@+id/btn_ver_movimientos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_movimientos"
            android:background="@android:color/transparent"
            android:contentDescription="Ver Movimientos" />


        <ImageButton
            android:id="@+id/btn_nuevo_movimiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_agregar"
            android:background="@android:color/transparent"
            android:contentDescription="Nuevo Movimiento" />


    </LinearLayout>

</RelativeLayout>