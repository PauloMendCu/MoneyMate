<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFondo"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título de la aplicación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MoneyMate"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Imagen del logotipo -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <!-- Layout para centrar los botones horizontalmente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Botón para ver cuentas -->
            <Button
                android:id="@+id/btn_ver_cuentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VER CUENTAS"
                android:backgroundTint="@color/botonSecundario"
                android:textAllCaps="true" />

            <!-- Botón para ver movimientos -->
            <Button
                android:id="@+id/btn_ver_movimientos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VER MOVIMIENTOS"
                android:backgroundTint="@color/botonSecundario"
                android:textAllCaps="true"
                android:layout_marginStart="16dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>