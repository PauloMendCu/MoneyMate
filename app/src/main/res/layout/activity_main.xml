<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Botón para ver movimientos -->
    <Button
        android:id="@+id/btn_ver_movimientos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Movimientos"/>

    <!-- Espacio entre botones -->
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <!-- Botón para ver cuentas -->
    <Button
        android:id="@+id/btn_ver_cuentas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Cuentas"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <!-- Botón para agregar nuevo movimiento -->
    <Button
        android:id="@+id/btn_nuevo_movimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Movimiento" />

</LinearLayout>
