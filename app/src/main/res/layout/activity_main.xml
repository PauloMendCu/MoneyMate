<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFondo"
    android:paddingTop="50dp">


    <TextView
        android:id="@+id/tituloPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MONEYMATE"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:id="@+id/tituloSecundario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTROLA TUS FINANZAS"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/botonSecundario"
        android:gravity="center_horizontal"
        android:layout_marginBottom="25dp"/>

    <LinearLayout
        android:id="@+id/contenedorBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_bg">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />



        <Button
            android:id="@+id/btn_ver_cuentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VER CUENTAS"
            android:backgroundTint="@color/botonSecundario"
            android:textAllCaps="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btn_ver_movimientos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VER MOVIMIENTOS"
            android:backgroundTint="@color/botonSecundario2"
            android:textAllCaps="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_nuevo_movimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRAR MOVIMIENTO"
            android:backgroundTint="@color/colorFondo"
            android:textAllCaps="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</LinearLayout>