<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFondo"
    android:paddingTop="32dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MoneyMate"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

    <Button
            android:id="@+id/btn_ver_cuentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VER CUENTAS"
            android:backgroundTint="@color/botonSecundario"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/btn_ver_movimientos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VER MOVIMIENTOS"
            android:backgroundTint="@color/botonSecundario"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/btn_nuevo_movimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRAR MOVIMIENTO"
            android:backgroundTint="@color/botonSecundario"
            android:textAllCaps="true" />

    </LinearLayout>
</LinearLayout>
