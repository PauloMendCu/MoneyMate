<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_money_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_money_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyMate"
        tools:targetApi="31">

        <receiver android:name=".ConnectivityReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".RegistrarTarjetaCreditoActivity"
            android:exported="false"
            android:label="@string/title_activity_registrar_tarjeta_credito" />
        <activity
            android:name=".TarjetasCreditoActivity"
            android:exported="false" />
        <activity
            android:name=".NuevaCuentaActivity"
            android:exported="false" />
        <activity
            android:name=".NuevoMovimientoActivity"
            android:exported="false" />
        <activity
            android:name=".MovimientosPorCuentaActivity"
            android:exported="false" />
        <activity
            android:name=".CuentasActivity"
            android:exported="false" />
        <activity
            android:name=".MovimientosActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>